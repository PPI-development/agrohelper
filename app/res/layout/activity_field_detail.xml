<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/progmain_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Название поля (нередактируемое) -->
        <TextView
            android:id="@+id/textView_field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название поля"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Площадь поля (нередактируемая) -->
        <TextView
            android:id="@+id/textView_field_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Площадь поля: 0.0 Га"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Spinner для выбора культуры -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Культура"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_crop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner" />

        <!-- Spinner для выбора типа почвы -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип почвы"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_soil_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner" />

        <!-- Список задач -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задачи"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Добавляем вес для ListView, чтобы он занимал оставшееся место и позволял прокрутку -->
        <ListView
            android:id="@+id/listView_tasks"
            android:layout_width="match_parent"
            android:layout_height="362dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/spinner"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:textColor="#000000" />

        <!-- Кнопка для добавления новой задачи -->
        <Button
            android:id="@+id/button_add_task"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#66BB6A"
            android:text="Добавить задачу"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
